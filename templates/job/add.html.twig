{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block javascript %}

<script type="text/javascript">
    $( document ).ready(function() {

    jQuery("#country").change(function () {
        const countryId = this.value

        if (countryId === '') {
            return;
        }

        $.get("/countries/" + countryId + "/cities", function( data ) {
            var $el = jQuery("#city");
            $el.empty();
            $.each(data, function(key,value) {
                $el.append($("<option></option>")
                    .attr("value", key).text(value));
            });
        });

        $.get("/countries/" + countryId + "/states", function( data ) {
            var $el = jQuery("#state");
            $el.empty();
            $.each(data, function(key,value) {
                $el.append($("<option></option>")
                    .attr("value", key).text(value));
            });
        });
    });
});
</script>

{% endblock %}

{% block body %}

    {% include 'common/navbar.html.twig' %}
    <div class="container py-3">
        <h1>Registracija</h1>

        <main>
            <div class="row row-cols-1 row-cols-md-3 mb-3 ">
                <div class="col-md-12 col-lg-12">
                    {% if job_add_errors is defined %}
                        <div class="alert alert-danger">
                            {% for message in job_add_errors %}
                                <div class="mb-1">{{ message }}</div>
                            {% endfor %}
                        </div>
                    {% endif %}

                    <form class="needs-validation" novalidate method="POST">
                        <div class="row g-3">
                            <div class="col-sm-12">
                                <label for="firstName" class="form-label">Pavadinimas</label>
                                <input type="text" class="form-control" placeholder="" value="" required name="title">
                            </div>

                            <div class="col-sm-12">
                                <label for="exampleTextarea" class="form-label mt-4">Aprašymas</label>
                                <textarea class="form-control" id="exampleTextarea" rows="3" required name="text"></textarea>
                            </div>

                            <div class="col-sm-12">
                                <label for="firstName" class="form-label">Atlikti iki</label>
                                <input type="date" class="form-control" placeholder="" value="" required name="due_to">
                            </div>

                            <div class="col-sm-12">
                                <label for="firstName" class="form-label">Kaina</label>
                                <input type="number" class="form-control" placeholder="" value="" required name="price">
                            </div>

                            <div class="col-md-12">
                                <label for="country" class="form-label">Šalis</label>
                                <select class="form-select" name="country_id" required id="country">
                                    <option value="" selected disabled>Pasirinkite...</option>
                                    {% for country in countries %}
                                        <option value="{{ country.id }}">{{ country.name }}</option>
                                    {% endfor  %}
                                </select>
                            </div>

                            <div class="col-md-12">
                                <label for="state" class="form-label">Valstija</label>
                                <select class="form-select" name="state_id" id="state">
                                    <option selected >Pasirinkite...</option>
                                </select>
                            </div>

                            <div class="col-md-12">
                                <label for="state" class="form-label">Miestas</label>
                                <select class="form-select" name="city_id" id="city">
                                    <option selected>Pasirinkite...</option>
                                </select>
                            </div>
                        </div>
                        <hr class="my-4">
                        <button class="w-100 btn btn-primary btn-lg" type="submit">Įdėti skelbimą</button>
                    </form>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
