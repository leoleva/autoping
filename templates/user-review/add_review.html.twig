{% extends 'base.html.twig' %}

{% block title %}Palikti atsiliepimą{% endblock %}


{% block javascript %}
{% endblock %}

{% block body %}

    {% include 'common/navbar.html.twig' %}
    <div class="container py-3">

        <h1>Palikti atsiliepimą</h1>
        <hr>

        <main>
            <div class="container">
                {% if job_add_errors is defined %}
                    <div class="alert alert-danger">
                        {% for message in job_add_errors %}
                            <div class="mb-1">{{ message }}</div>
                        {% endfor %}
                    </div>
                {% endif %}

                <form class="needs-validation" method="POST" action="{{ url('add_review_handle', {id: job.id}) }}">
                    <div class="row">
                        <div class="col-m-12">
                            <div class="row">
                                <div class="col-md-3">
                                    {{ include('common/job-card.html.twig') }}
                                </div>
                                <div class="col-md-9">
                                    <div class="row ">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <label for="exampleTextarea" class="form-label">Aprašymas</label>
                                                <textarea class="form-control" id="exampleTextarea" rows="3" required name="text"></textarea>
                                            </div>
                                            <div class="col-md-12 mt-1">
                                                <label for="state" class="form-label">Įvertinimas</label>
                                                <select class="form-select" required name="rating" id="rating">
                                                    <option selected disabled>Pasirinkite</option>
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                    <option value="4">4</option>
                                                    <option value="5">5</option>
                                                </select>
                                            </div>
                                            <hr class="my-4">
                                            <button class="w-100 btn btn-primary btn-lg" type="submit">Tęsti</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </main>
    </div>
{% endblock %}
